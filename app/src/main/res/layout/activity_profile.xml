<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"

        android:orientation="vertical">



            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbarAlwaysDrawVerticalTrack="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="40dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/drawable_round">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/logon"

                                android:background="@drawable/drawable_round"
                                 />

                            <LinearLayout
                                android:id="@+id/ll"
                                android:layout_width="150dp"

                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@drawable/drawable_round_trans"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/ic_upload_image" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Upload Photo"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="#fff" />

                            </LinearLayout>

                        </FrameLayout>

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/name"
                            android:hint="Name"
                            android:layout_marginLeft="25dp"
                            android:textSize="16dp"
                            android:fontFamily="@font/gotham"
                            android:layout_marginTop="10dp"
                            android:textColorHint="#A9AEAE"
                            android:inputType="text"
                            android:textColor="#000000"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="#111110"

                            />
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/job"
                            android:hint="Job"
                            android:maxLines="1"
                            android:fontFamily="@font/gotham"
                            android:layout_marginLeft="25dp"

                            android:textSize="16dp"
                            android:layout_marginTop="10dp"
                            android:textColorHint="#A9AEAE"
                            android:inputType="text"
                            android:textColor="#000000"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="#111110"

                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/date"
                                android:hint="DOB(DD-MM-YY)" android:textSize="14dp"
                                android:textColorHint="#3FE6CE"
                                android:inputType="text"
                                android:textColor="#33F5DE"
                                android:fontFamily="@font/gotham"
                                android:layout_marginLeft="25dp"
                                app:met_baseColor="@color/colorPrimary"
                                app:met_floatingLabel="highlight"
                                app:met_primaryColor="#111110"
                                />
                            <Button
                                android:layout_width="100dp"
                                android:layout_marginLeft="12dp"
                                android:id="@+id/choose"
                                android:background="#00605D5D"
                                android:textColor="#9A9494"
                                android:textAllCaps="false"
                                android:layout_height="23dp"
                                android:text="Choose"/>
                        </LinearLayout>




                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/caste" android:textSize="16dp"
                            android:hint="Caste"
                            android:textColorHint="#3FE6CE"
                            android:textColor="#33F5DE"
                            android:layout_marginLeft="25dp"
                            android:fontFamily="@font/gotham"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="#111110"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/time"
                                android:hint="TOB(HH:MM)"
                                android:textColorHint="#3FE6CE"
                                android:inputType="text" android:textSize="14dp"
                                android:textColor="#33F5DE"
                                android:layout_marginLeft="25dp"
                                app:met_baseColor="@color/colorPrimary"
                                android:fontFamily="@font/gotham"
                                app:met_floatingLabel="highlight"
                                app:met_primaryColor="#111110"
                                />
                            <Button
                                android:layout_width="100dp"
                                android:layout_marginLeft="12dp"
                                android:background="#0000BCD4"
                                android:id="@+id/choose1"
                                android:textColor="#AFA9A9"
                                android:textAllCaps="false"
                                android:layout_height="23dp"
                                android:text="Choose"/>
                        </LinearLayout>

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/mobileno" android:textSize="16dp"
                            android:hint="Contact Number"
                            android:textColorHint="#3FE6CE"
                            android:textColor="#33F5DE"
                            android:inputType="number"
                            android:layout_marginLeft="25dp"
                            android:fontFamily="@font/gotham"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="#111110"
                            />
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/whatsappno" android:textSize="16dp"
                            android:hint="Whatsapp Number"
                            android:textColorHint="#3FE6CE"
                            android:textColor="#33F5DE"
                            android:layout_marginLeft="25dp"
                            android:fontFamily="@font/gotham"
                            android:inputType="number"
                            app:met_baseColor="@color/colorPrimary"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="#111110"
                            />



                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/salary"
                            app:ms_dropdown_max_height="500dp"
                            android:background="#960808"
                            app:ms_background_color="#fff"
                            android:fontFamily="@font/gotham"
                            app:ms_hint="Salary"
                            app:ms_hint_color="#B03F7CE6"
                            app:ms_text_color="#673AB7"

                            app:ms_dropdown_height="wrap_content"
                            android:layout_width="300dp"
                            android:layout_height="45dp"/>

                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/religion"
                            app:ms_dropdown_max_height="500dp"
                            android:background="#960808"
                            app:ms_background_color="#fff"
                            app:ms_hint="Religion"
                            app:ms_hint_color="#B03F7CE6"
                            app:ms_text_color="#FF9800"
                            android:fontFamily="@font/gotham"

                            app:ms_dropdown_height="wrap_content"
                            android:layout_width="300dp"
                            android:layout_height="45dp"/>
                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/weight"
                            app:ms_dropdown_max_height="500dp"
                            android:background="#960808"
                            app:ms_background_color="#fff"
                            app:ms_hint="Weight"
                            android:fontFamily="@font/gotham"
                            app:ms_hint_color="#B03F7CE6"
                            app:ms_text_color="#4CAF50"

                            app:ms_dropdown_height="wrap_content"
                            android:layout_width="300dp"
                            android:layout_height="45dp"/>
                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/height"
                            app:ms_dropdown_max_height="500dp"
                            android:background="#960808"
                            app:ms_background_color="#fff"
                            app:ms_hint="Height"
                            app:ms_hint_color="#B03F7CE6"
                            android:fontFamily="@font/gotham"
                            app:ms_text_color="#00BCD4"


                            app:ms_dropdown_height="wrap_content"
                            android:layout_width="300dp"
                            android:layout_height="45dp"/>

                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/color"
                            app:ms_dropdown_max_height="500dp"
                            android:background="#960808"
                            app:ms_background_color="#fff"
                            app:ms_hint="Color"
                            app:ms_hint_color="#B03F7CE6"
                            app:ms_text_color="#000000"
                            android:fontFamily="@font/gotham"

                            app:ms_dropdown_height="wrap_content"
                            android:layout_width="300dp"
                            android:layout_height="45dp"/>



                        <Button
                            android:layout_width="180dp"
                            android:layout_height=
                                "35dp"
                            android:text="Submit"
                            android:layout_marginTop="40dp"
                            android:id="@+id/sumbit"
                            android:layout_marginBottom="20dp"
                            android:textColor="#fff"
                            android:background="@drawable/bg_app_rectangle_with_semicircle_edge"
                            android:layout_gravity="center"/>




                    </LinearLayout>
                </LinearLayout>
            </ScrollView>







    </LinearLayout>
</ScrollView>